@model IEnumerable<ATMS_TestingSubject.Models.Department>
@{
    ViewBag.Title = "Departments";
    Layout = "~/Views/Shared/_Admin.cshtml";
}

<h3 class="text-center my-4">
    List of Departments
    @*<span class="badge badge-pill badge-primary">Admin</span>*@
</h3>
<div class="container">
    <table class="table table-hover table-bordered text-center shadow-3">
        <thead class="thead-dark">
            <tr>
                <th scope="col">ID</th>
                <th scope="col">Name Department</th>
                <th scope="col">Actions</th>
            </tr>
        </thead>
        <tbody>
            @{
                if (Model.Count() <= 0)
                {
                    <tr>
                        <td>No Data</td>
                    </tr>
                }
                else
                {
                    foreach (var dept in Model)
                    {
                        <tr>
                            <td>@Html.DisplayFor(x => dept.DepId)</td>
                            <td>@Html.DisplayFor(x => dept.DepName)</td>
                            <td>
                                <a href="@Url.Action("DetailsDepartment","Admin" , new {id = dept.DepId})">View</a> | <a href="@Url.Action("EditDepartment","Admin" , new {id = dept.DepId})">Edit</a> |
                                <a href="@Url.Action("DeleteDepartment","Admin" , new {id = dept.DepId})">Delete</a>
                            </td>
                        </tr>
                    }
                }
            }
        </tbody>
    </table>
    <div class="d-flex justify-content-center mt-5">
        <a href="@Url.Action("AddDepartment","Admin")" class="btn btn-outline-primary">
            Add New Department
        </a>
    </div>
</div>